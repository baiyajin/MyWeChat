<Window x:Class="MyWeChat.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="微信" Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#F7F7F7"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧Logo区域 - 微信电脑端风格 -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Width="120" Height="120" 
                       Margin="0,0,0,20"
                       Stretch="Uniform">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/Resources/favicon.ico"/>
                    </Image.Source>
                </Image>
                <TextBlock Text="微信" 
                           FontSize="24" 
                           FontWeight="Light"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="请使用手机号登录" 
                           FontSize="12" 
                           Foreground="#999999"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- 右侧登录表单 - 微信电脑端风格 -->
        <StackPanel Grid.Column="1" Margin="40,60,40,40" VerticalAlignment="Top">
            <!-- 登录历史 - 微信电脑端风格 -->
            <TextBlock Name="HistoryTitleTextBlock"
                       Text="最近登录" 
                       FontSize="12" 
                       Margin="0,0,0,12"
                       Foreground="#999999"
                       Visibility="Collapsed"/>
            
            <!-- 登录表单容器 -->
            <Border Background="White" 
                    BorderBrush="#E5E5E5" 
                    BorderThickness="1" 
                    CornerRadius="2"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- 手机号输入 - 微信电脑端风格（下划线输入框） -->
                    <Border BorderThickness="0,0,0,1" BorderBrush="#E5E5E5" Margin="0,0,0,20">
                        <TextBox Name="PhoneTextBox" 
                                 FontSize="14" 
                                 Padding="0,8"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 GotFocus="PhoneTextBox_GotFocus"
                                 LostFocus="PhoneTextBox_LostFocus"/>
                    </Border>
                    
                    <!-- 验证码输入 - 微信电脑端风格 -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderThickness="0,0,0,1" BorderBrush="#E5E5E5" Margin="0,0,10,0">
                            <TextBox Name="CodeTextBox" 
                                     FontSize="14" 
                                     Padding="0,8"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     GotFocus="CodeTextBox_GotFocus"
                                     LostFocus="CodeTextBox_LostFocus"/>
                        </Border>
                        <Button Name="GetCodeButton" 
                                Grid.Column="1"
                                Content="获取验证码" 
                                Padding="12,6"
                                Background="Transparent"
                                Foreground="#07C160"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="GetCodeButton_Click"
                                FontSize="12"
                                IsEnabled="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderThickness="0"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#06AD56"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <!-- 错误提示 -->
                    <TextBlock Name="ErrorTextBlock" 
                               Text="" 
                               FontSize="12" 
                               Foreground="#FF3B30"
                               Margin="0,0,0,20"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"
                               HorizontalAlignment="Center"/>
                    
                    <!-- 登录按钮 - 微信电脑端风格（绿色按钮） -->
                    <Button Name="LoginButton" 
                            Content="登录" 
                            FontSize="14" 
                            Padding="0,10"
                            Background="#07C160"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click"
                            IsEnabled="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="2"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#06AD56"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#B2E5B8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- 登录历史列表 -->
            <ScrollViewer MaxHeight="200" 
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="HistoryItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E5E5E5" 
                                    BorderThickness="0,0,0,1"
                                    Padding="12" 
                                    Margin="0,0,0,0"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="HistoryItem_MouseLeftButtonUp"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" 
                                             Width="40" Height="40" 
                                             Margin="0,0,12,0">
                                        <Ellipse.Fill>
                                            <ImageBrush>
                                                <ImageBrush.ImageSource>
                                                    <BitmapImage UriSource="{Binding Avatar}"/>
                                                </ImageBrush.ImageSource>
                                            </ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nickname}" 
                                                   FontSize="14" 
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding Phone}" 
                                                   FontSize="12" 
                                                   Foreground="#999999"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" 
                                               Text="›" 
                                               FontSize="18" 
                                               Foreground="#C7C7CC"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>

