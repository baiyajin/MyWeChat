<Window x:Class="MyWeChat.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        xmlns:ui="clr-namespace:MyWeChat.Windows.UI.Controls"
        Title="" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#EDEDED"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20" VerticalAlignment="Top">
            <StackPanel HorizontalAlignment="Center" Margin="0,60,0,60">
                <!-- Logo - 无背景 -->
                <Image Width="80" Height="80" 
                       Margin="0,0,0,0"
                       Stretch="Uniform">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/Resources/favicon.ico"/>
                    </Image.Source>
                </Image>
                </StackPanel>
                
                <!-- 登录历史列表 - App端风格 -->
                <TextBlock Name="HistoryTitleTextBlock"
                           Text="最近登录" 
                           FontSize="14" 
                           Margin="0,0,0,12"
                           Foreground="#999999"
                           Visibility="Collapsed"/>
                
                <ItemsControl Name="HistoryItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E5E5E5" 
                                    BorderThickness="0,0,0,1"
                                    Padding="12,12,12,12" 
                                    Margin="0,0,0,0"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="HistoryItem_MouseLeftButtonUp"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" 
                                             Width="45" Height="45" 
                                             Margin="0,0,12,0">
                                        <Ellipse.Fill>
                                            <ImageBrush>
                                                <ImageBrush.ImageSource>
                                                    <BitmapImage UriSource="{Binding Avatar}"/>
                                                </ImageBrush.ImageSource>
                                            </ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nickname}" 
                                                   FontSize="16" 
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding Phone}" 
                                                   FontSize="14" 
                                                   Foreground="#999999"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" 
                                               Text="›" 
                                               FontSize="20" 
                                               Foreground="#C7C7CC"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- 登录表单容器 - App端风格 -->
                <Border Background="White" 
                        BorderBrush="#E5E5E5" 
                        BorderThickness="0"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,0,0,40">
                    <StackPanel>
                        <!-- 手机号输入 - App端风格（下划线输入框） -->
                        <TextBox Name="PhoneTextBox" 
                                 FontSize="16" 
                                 Padding="0,8"
                                 Margin="0,0,0,20"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E5E5E5"
                                 Background="Transparent"
                                 GotFocus="PhoneTextBox_GotFocus"
                                 LostFocus="PhoneTextBox_LostFocus"
                                 TextChanged="PhoneTextBox_TextChanged"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border BorderThickness="0,0,0,1" BorderBrush="#E5E5E5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- 手机图标 - 使用Path绘制，匹配Material Icons phone_android -->
                                                        <Path Grid.Column="0" 
                                                              Data="M17,1.01L7,1C5.9,1 5,1.9 5,3V21C5,22.1 5.9,23 7,23H17C18.1,23 19,22.1 19,21V3C19,1.9 18.1,1.01 17,1.01ZM17,19H7V5H17V19Z" 
                                                              Fill="#999999"
                                                              Stretch="Uniform"
                                                              Width="20"
                                                              Height="20"
                                                              Margin="0,0,8,0" 
                                                              VerticalAlignment="Center"/>
                                                        <Grid Grid.Column="1" Margin="0,8">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <TextBlock Text="请输入手机号"
                                                                       Foreground="#999999"
                                                                       FontSize="16"
                                                                       VerticalAlignment="Center"
                                                                       IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <TextBox Name="LicenseKeyTextBox" 
                                 FontSize="16" 
                                 Padding="0,8"
                                 Margin="0,0,0,20"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E5E5E5"
                                 Background="Transparent"
                                 GotFocus="LicenseKeyTextBox_GotFocus"
                                 LostFocus="LicenseKeyTextBox_LostFocus"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border BorderThickness="0,0,0,1" BorderBrush="#E5E5E5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Path Grid.Column="0" 
                                                              Data="M111.37536,778.99264 C82.25792,808.06912 82.25792,855.38816 111.37536,884.48512 C140.47232,913.60768 187.79136,913.60768 216.68864,884.48512 L237.71648,863.66208 L325.41696,951.33696 A38.06208,38.06208 0 0 0 379.4688,951.33696 L510.1568,820.64896 A38.06208,38.06208 0 0 0 510.1568,766.592 L422.48192,678.91712 L578.67776,522.5216 C612.10112,539.79136 650.20416,549.54496 690.39104,549.54496 C825.1904,549.54496 934.46144,440.28416 934.46144,305.47456 C934.46144,170.6752 825.1904,61.40416 690.39104,61.40416 C555.5712,61.40416 446.32064,170.6752 446.32064,305.47456 C446.32064,345.66144 456.06912,383.76448 473.344,417.19296 L111.37536,778.99264 Z M596.51584,305.47456 C596.51584,253.66016 638.57152,211.59936 690.39104,211.59936 C742.21056,211.59936 784.26624,253.66016 784.26624,305.47456 C784.26624,357.28896 742.21056,399.34976 690.39104,399.34976 C638.57152,399.34976 596.51584,357.28896 596.51584,305.47456 Z" 
                                                              Fill="#999999"
                                                              Stretch="Uniform"
                                                              Width="20"
                                                              Height="20"
                                                              Margin="0,0,8,0" 
                                                              VerticalAlignment="Center"/>
                                                        <Grid Grid.Column="1" Margin="0,8">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <TextBlock Text="请输入授权码"
                                                                       Foreground="#999999"
                                                                       FontSize="16"
                                                                       VerticalAlignment="Center"
                                                                       IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- 错误提示 -->
                        <TextBlock Name="ErrorTextBlock" 
                                   Text="" 
                                   FontSize="12" 
                                   Foreground="Red"
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"
                                   TextAlignment="Center"/>
                        
                        <!-- 登录按钮 - App端风格（绿色圆角按钮） -->
                        <Button Name="LoginButton" 
                                Content="登录" 
                                FontSize="16" 
                                Padding="0,12"
                                Height="44"
                                Background="#07C160"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="LoginButton_Click"
                                IsEnabled="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#06AD56"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#B2E5B8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        </StackPanel>
                    </Border>
            </StackPanel>
            
            <!-- 启动进度提示 - 显示在底部 -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E5E5E5"
                    Padding="20,15"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- 加载动画图标（Material Design风格，围绕中心旋转） -->
                    <Viewbox Name="LoadingIndicator"
                             Width="16"
                             Height="16"
                             Margin="0,0,10,0"
                             Visibility="Visible"
                             RenderTransformOrigin="0.5,0.5">
                        <Grid Width="24" Height="24">
                            <!-- Material Design风格的旋转加载圆圈 -->
                            <Path Stroke="#07C160"
                                  StrokeThickness="2.5"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Opacity="0.9">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="12,2">
                                            <ArcSegment Size="10,10"
                                                        SweepDirection="Clockwise"
                                                        Point="12,22"
                                                        IsLargeArc="False"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                                <!-- 虚线效果：只显示约1/4的圆弧，形成Material Design风格 -->
                                <Path.StrokeDashArray>
                                    <DoubleCollection>6 18</DoubleCollection>
                                </Path.StrokeDashArray>
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotateTransform"/>
                                </Path.RenderTransform>
                            </Path>
                        </Grid>
                        <Viewbox.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotateTransform"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360"
                                                         Duration="0:0:1.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Viewbox.Triggers>
                    </Viewbox>
                    
                    <!-- 完成图标（对勾） -->
                    <Path Name="CompletedIndicator"
                          Width="16"
                          Height="16"
                          Margin="0,0,10,0"
                          Visibility="Collapsed"
                          Stretch="Uniform"
                          Fill="#07C160"
                          Data="M9,16.17L4.83,12l-1.42,1.41L9,19 21,7l-1.41-1.41z"/>
                    
                    <!-- 进度文本 -->
                    <TextBlock Name="LoadingStatusText"
                               Text="正在初始化..."
                               FontSize="13"
                               Foreground="#666666"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- 关闭遮罩控件（统一组件） -->
            <ui:WindowCloseOverlay x:Name="CloseOverlay"/>
    </Grid>
</Window>

