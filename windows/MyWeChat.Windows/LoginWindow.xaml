<Window x:Class="MyWeChat.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#EDEDED"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <StackPanel HorizontalAlignment="Center" Margin="0,60,0,60">
                <!-- Logo - 无背景 -->
                <Image Width="80" Height="80" 
                       Margin="0,0,0,20"
                       Stretch="Uniform">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/Resources/favicon.ico"/>
                    </Image.Source>
                </Image>
                <TextBlock Text="微信" 
                               FontSize="28" 
                               FontWeight="Light"
                               Foreground="#333333"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- 登录历史列表 - App端风格 -->
                <TextBlock Name="HistoryTitleTextBlock"
                           Text="最近登录" 
                           FontSize="14" 
                           Margin="0,0,0,12"
                           Foreground="#999999"
                           Visibility="Collapsed"/>
                
                <ItemsControl Name="HistoryItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E5E5E5" 
                                    BorderThickness="0,0,0,1"
                                    Padding="12,12,12,12" 
                                    Margin="0,0,0,0"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="HistoryItem_MouseLeftButtonUp"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" 
                                             Width="45" Height="45" 
                                             Margin="0,0,12,0">
                                        <Ellipse.Fill>
                                            <ImageBrush>
                                                <ImageBrush.ImageSource>
                                                    <BitmapImage UriSource="{Binding Avatar}"/>
                                                </ImageBrush.ImageSource>
                                            </ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nickname}" 
                                                   FontSize="16" 
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding Phone}" 
                                                   FontSize="14" 
                                                   Foreground="#999999"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" 
                                               Text="›" 
                                               FontSize="20" 
                                               Foreground="#C7C7CC"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- 登录表单容器 - App端风格 -->
                <Border Background="White" 
                        BorderBrush="#E5E5E5" 
                        BorderThickness="0"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,0,0,0">
                    <StackPanel>
                        <!-- 手机号输入 - App端风格（下划线输入框） -->
                        <TextBox Name="PhoneTextBox" 
                                 FontSize="16" 
                                 Padding="0,8"
                                 Margin="0,0,0,20"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E5E5E5"
                                 Background="Transparent"
                                 GotFocus="PhoneTextBox_GotFocus"
                                 LostFocus="PhoneTextBox_LostFocus"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border BorderThickness="0,0,0,1" BorderBrush="#E5E5E5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- 手机图标 - 使用Path绘制，匹配Material Icons phone_android -->
                                                        <Path Grid.Column="0" 
                                                              Data="M17,1.01L7,1C5.9,1 5,1.9 5,3V21C5,22.1 5.9,23 7,23H17C18.1,23 19,22.1 19,21V3C19,1.9 18.1,1.01 17,1.01ZM17,19H7V5H17V19Z" 
                                                              Fill="#999999"
                                                              Stretch="Uniform"
                                                              Width="20"
                                                              Height="20"
                                                              Margin="0,0,8,0" 
                                                              VerticalAlignment="Center"/>
                                                        <Grid Grid.Column="1" Margin="0,8">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <TextBlock Text="请输入手机号"
                                                                       Foreground="#999999"
                                                                       FontSize="16"
                                                                       VerticalAlignment="Center"
                                                                       IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- 授权码输入 - App端风格 -->
                        <TextBox Name="LicenseKeyTextBox" 
                                 FontSize="16" 
                                 Padding="0,8"
                                 Margin="0,0,0,20"
                                 BorderThickness="0,0,0,1"
                                 BorderBrush="#E5E5E5"
                                 Background="Transparent"
                                 GotFocus="LicenseKeyTextBox_GotFocus"
                                 LostFocus="LicenseKeyTextBox_LostFocus"
                                 VerticalContentAlignment="Center">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border BorderThickness="0,0,0,1" BorderBrush="#E5E5E5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- 钥匙图标 - 使用Path绘制，匹配Material Icons vpn_key -->
                                                        <Path Grid.Column="0" 
                                                              Data="M12.65,10C11.83,10 11.2,10.63 11.2,11.45C11.2,12.27 11.83,12.9 12.65,12.9C13.47,12.9 14.1,12.27 14.1,11.45C14.1,10.63 13.47,10 12.65,10ZM17,2H7C5.9,2 5,2.9 5,4V20C5,21.1 5.9,22 7,22H17C18.1,22 19,21.1 19,20V4C19,2.9 18.1,2 17,2ZM17,20H7V4H17V20Z" 
                                                              Fill="#999999"
                                                              Stretch="Uniform"
                                                              Width="20"
                                                              Height="20"
                                                              Margin="0,0,8,0" 
                                                              VerticalAlignment="Center"/>
                                                        <Grid Grid.Column="1" Margin="0,8">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                            <TextBlock Text="请输入授权码"
                                                                       Foreground="#999999"
                                                                       FontSize="16"
                                                                       VerticalAlignment="Center"
                                                                       IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <!-- 错误提示 -->
                        <TextBlock Name="ErrorTextBlock" 
                                   Text="" 
                                   FontSize="12" 
                                   Foreground="Red"
                                   Margin="0,0,0,16"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"
                                   TextAlignment="Center"/>
                        
                        <!-- 登录按钮 - App端风格（绿色圆角按钮） -->
                        <Button Name="LoginButton" 
                                Content="登录" 
                                FontSize="16" 
                                Padding="0,12"
                                Height="44"
                                Background="#07C160"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="LoginButton_Click"
                                IsEnabled="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#06AD56"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#B2E5B8"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
    </Grid>
</Window>

